<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             Shell.NavBarIsVisible="false"
             
             x:Class="Notes.Views.LoginPage">
    <ContentPage.Content>



        <Grid Margin="0, 0, 0, 0" Padding="0, 0, 0, 0">
            <Image Source="zzz.jpg" Aspect="AspectFill" Opacity="1"/>

            <!--<yummy:PancakeView BackgroundGradientStartPoint="0,0" BackgroundGradientEndPoint="0,1" Padding="0" CornerRadius="0"
                    Margin="0,0,0,0">
                <yummy:PancakeView.BackgroundGradientStops>
                    <yummy:GradientStopCollection>
                        <yummy:GradientStop Color="Transparent" Offset="0" />
                        <yummy:GradientStop Color="Black" Offset="0.5" />
                        <yummy:GradientStop Color="Black" Offset="0.5" />
                    </yummy:GradientStopCollection>
                </yummy:PancakeView.BackgroundGradientStops>-->

            <StackLayout  Margin="25,15" Spacing="0">
                <Image Source="Klad.png" Scale="0.5" VerticalOptions="Start"/>

                <Grid HorizontalOptions="Fill">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="120"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>

                    <yummy:PancakeView Grid.Row="2" Grid.ColumnSpan="4" HorizontalOptions="Fill"
                                   CornerRadius="0,30,30,0" >
                        <Button class="btn" Opacity="0.8"
                                    Visual="Default"
                                    Text="Login"
                                
                                Clicked="Button_Clicked"
                                    BackgroundColor="#339491"
                                    TextColor="White">
                            <Button.ImageSource>
                                <FontImageSource
                                            FontFamily="FontAwesome5Solid"
                                            Glyph="&#xf007;"
                                            Size="16"
                                            Color="White" />
                            </Button.ImageSource>
                        </Button>
                    </yummy:PancakeView>

                    <yummy:PancakeView Grid.Row="3" Grid.ColumnSpan="4" HorizontalOptions="Fill"
                                   CornerRadius="0,30,30,0" >
                        <Button class="btn" Opacity="0.8"
                                    Visual="Default"
                                    Text="Sign up"
                                
                                Clicked="Button_Clicked2"
                                    BackgroundColor="LightGray"
                                    TextColor="White">
                            <Button.ImageSource>
                                <FontImageSource
                                            FontFamily="FontAwesome5Solid"
                                            Glyph="&#xf234;"
                                            Size="16"
                                            Color="White" />
                            </Button.ImageSource>
                        </Button>
                    </yummy:PancakeView>




                </Grid>

            </StackLayout>
            <!--</yummy:PancakeView>-->
        </Grid>




    </ContentPage.Content>
</ContentPage>



























